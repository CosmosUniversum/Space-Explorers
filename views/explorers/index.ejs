<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main class="bg-light">
  <div class="container py-5 px-3">
    <div 
      class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g5 g-sm-3 g-xxl-5 px-sm-5 px-4"
    >
      <% explorers.forEach(explorer => { %>
        <div class="col">
          <a class="text-decoration-none" href="/explorers/<%= explorer._id %>">
            <div class="card shadow-sm">
              <% if (explorer.avatar) { %>
                <img
                  class="card-img-top"
                  src="<%= explorer.avatar %>"
                  alt="<%= explorer.name %>'s avatar"
                  width="100%"
                  height="170"
                />
              <% } else {%>
                <img
                  class="card-img-top"
                  src="/images/icons/user.png"
                  alt="A placeholder avatar"
                  width="100%"
                  height="170"
                />
              <% } %>
              <div class="card-body">
                <p class="card-title fs-6 text-dark"><%= explorer.name %></p>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
